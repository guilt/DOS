;
; Some simple HTML macros.
;

Trigger: "<b"
Mode: 0,1,0,1,0
Name: Bold
 "<b>@0</b>@1"

Trigger: "<i"
Mode: 0,1,0,1,0
Name: Italic
 "<i>@0</i>@1"

Trigger: "<u"
Mode: 0,1,0,1,0
Name: Underline
 "<u>@0</u>@1"

Trigger: "<c"
Mode: 0,1,0,1,0
Name: Centre
 "<center>@0</center>@1"

Trigger: "<a"
Mode: 0,1,0,1,0
Name: Link
 "<a href=\"@0\">@1</a>@2"

Trigger: "<m"
Mode: 0,1,0,1,0
Name: Image
 "<img src=\"@0\">@1"

Trigger: "<t"
Mode: 0,1,0,1,0
Name: Table
 "<table>\n"
 "<tr>@0</tr>\n"
 "</table>@1"

Trigger: "me"
Mode: 0,1,0,1,0
Name: Meta tag
 "<meta name=\"@0\" content=\"@1\">"

Trigger: "<!"
Mode: 0,1,0,1,0
Name: Comment
 "<!-- @0 -->@1"

Trigger: "ma"
Mode: 0,1,0,1,0
Name: Squeleton
 "<HTML><head>\n"
 "<title>@0</title>\n"
 "</head>\n"
 "<body>\n"
 "@1\n"
 "</body>\n"
 "</HTML>\n"

Trigger: "<f"
Mode: 0,1,0,1,0
Name: Font
 "<font @0>@1</font>"


